<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="gui.Controller" alignment="CENTER">
    <Label text="Address: " GridPane.columnIndex="0" GridPane.rowIndex="1"></Label>
    <Label text="PORT: " GridPane.columnIndex="0" GridPane.rowIndex="2" ></Label>
    <TextField fx:id="addressField" GridPane.columnIndex="1" GridPane.rowIndex="1"></TextField>
    <TextField fx:id="portField" GridPane.columnIndex="1" GridPane.rowIndex="2"></TextField>
    <TextArea fx:id="textArea" editable="false" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="3"></TextArea>
    <Button fx:id="startBtn" GridPane.columnIndex="0" GridPane.rowIndex="4" text="Start"></Button>
    <Button fx:id="stopBtn" disable="true" GridPane.columnIndex="1" GridPane.rowIndex="4" text="Stop"></Button>
</GridPane>